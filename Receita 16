export default async function Home({ searchParams }) {
    const { titleSearchKey = "bagdad", year = "", type = "movie" } = searchParams;

    const res = await fetch(`http://www.omdbapi.com/?apikey=f1cbc41e&s=${titleSearchKey}&y=${year}&type=${type}`);
    const data = await res.json();

    return (
        <div>
            {data.Search?.map((m) => (
                <div key={m.imdbID} style={{ marginBottom: "20px" }}>
                    <h2>{m.Title} ({m.Year})</h2>
                    <img src={m.Poster} alt={`Poster de ${m.Title}`} style={{ width: "200px", height: "auto" }} />
                </div>
            ))}
        </div>
    );
}
